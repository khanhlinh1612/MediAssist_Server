<div class='mt-4'>
    <div class='row gx-2'>
        {{#each posts}}
            <div class='col-sm-4 col-md-3 col-6 ms-2'>
                <div class='card mb-2 ms-2' style='width: 18rem;'>
                    <a href='/posts/{{this.slug}}'>
                        <img
                            src='{{this.Image_url}}'
                            class='card-img-top'
                            alt='...'
                        />
                    </a>

                    <div class='card-body'>
                        <a href='/posts/{{this.slug}}'>
                            <h5 class='card-title'>{{this.Title}}</h5>
                        </a>

                        <p class='card-text'>{{this.content}}</p>
                        <a href='#' class='btn btn-primary'>Go somewhere</a>
                    </div>
                </div>
            </div>
        {{/each}}

    </div>
</div>
